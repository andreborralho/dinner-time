.recipe{ id: dom_id(recipe) }
  %h3= recipe.title

  %div
    %small
      %i.fa-regular.fa-clock
      = 'Cooking:'
    = "#{recipe.cooking_time} minutes"

  %div
    %small
      %i.fa-regular.fa-clock
      = 'Preparation:'
    = "#{recipe.preparation_time} minutes"

  %img.recipe-image{ src: decode_image_url(recipe.image) }

  %ul
    - recipe.recipe_ingredients.each do |ingredient|
      %li= ingredient.ingredient_description

= form_with(model: ingredient) do |form|
  - if ingredient.errors.any?
    %div{ style: "color: red" }
      %h2= "#{pluralize(ingredient.errors.count, "error")} prohibited this ingredient from being saved:"

      %ul
        - ingredient.errors.each do |error|
          %li= error.full_message

  %div
    = form.label :name, style: "display: block"
    = form.text_field :name

  %div
    = form.label :quantity, style: "display: block"
    = form.number_field :quantity

    = form.select :unit, Ingredient::UNITS, prompt: 'Select a unit'

  %div
    = form.submit
